<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
       default-autowire="byName">

    <bean id="employeeDAO" class="ua.goit.java.restaurant.DAO.hibernate.HEmployeeDAO"/>
    <bean id="employeeService" class="ua.goit.java.restaurant.service.impl.EmployeeServiceImpl"/>

    <bean id="dishDAO" class="ua.goit.java.restaurant.DAO.hibernate.HDishDAO"/>
    <bean id="dishService" class="ua.goit.java.restaurant.service.impl.DishServiceImpl"/>

    <bean id="ingredientDAO" class="ua.goit.java.restaurant.DAO.hibernate.HIngredientDAO"/>
    <bean id="ingredientService" class="ua.goit.java.restaurant.service.impl.IngredientServiceImpl"/>

    <bean id="menuDAO" class="ua.goit.java.restaurant.DAO.hibernate.HMenuDAO"/>
    <bean id="menuService" class="ua.goit.java.restaurant.service.impl.MenuServiceImpl"/>

    <bean id="orderDAO" class="ua.goit.java.restaurant.DAO.hibernate.HOrderDAO"/>
    <bean id="orderService" class="ua.goit.java.restaurant.service.impl.OrderServiceImpl"/>

    <bean id="preparedDishDAO" class="ua.goit.java.restaurant.DAO.hibernate.HPreparedDishDAO"/>
    <bean id="preparedDishService" class="ua.goit.java.restaurant.service.impl.PreparedDishServiceImpl"/>

    <bean id="warehouseDAO" class="ua.goit.java.restaurant.DAO.hibernate.HWarehouseDAO"/>
    <bean id="warehouseService" class="ua.goit.java.restaurant.service.impl.WarehouseServiceImpl"/>

</beans>

